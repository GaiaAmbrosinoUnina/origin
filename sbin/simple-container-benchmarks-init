#!/bin/bash

# if we don't have a target var, then we're running in server mode
# ...so start node and iperf
if [[ ! -n "$TARGET" ]]
then
	echo 'Server mode...'
	echo 'sg' > /mnt/prova.txt
	echo 'ho scritto su provatxt'
	(time dd bs=1M count=1024 if=/dev/zero of=/simple-container-benchmarks-writetest conv=fdatasync) 2> /mnt/prova.txt
else
	echo 'Esempio prova'
	echo "Target: $TARGET"
fi
